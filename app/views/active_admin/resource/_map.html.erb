<script src="https://api.mapbox.com/mapbox-gl-js/v1.9.0/mapbox-gl.js"></script>
<link href="https://api.mapbox.com/mapbox-gl-js/v1.9.0/mapbox-gl.css" rel="stylesheet" />
<style>
  .map-container { display: flex; justify-content: space-between; align-items: center }
  .map { position: relative; height: 300px;  top: 0; bottom: 0; width: 100%; }
  .map-wrapper { width: 100%; padding: 16px; }
</style>

<div class="map-container">
  <div class="map-wrapper">
    <div id="map" class="map"></div>
  </div>
</div>

<script>
  mapboxgl.accessToken = '<%= ENV['MAPBOX_API_KEY'] %>';
  const map = new mapboxgl.Map({
    container: 'map', // container id
    style: 'mapbox://styles/mapbox/streets-v11', // stylesheet location,
    center: <%= center %>,
    zoom: 8
  });
  const marker1 = new mapboxgl.Marker()
    .setLngLat(<%= center %>)
    .addTo(map);

  map.on('load', function() {
    <% if bbox.present? %>
    map.once('moveend', () => {
      setTimeout(() => {
        const newBounds = map.getBounds();
        newBounds.extend(<%= center %>)
        map.fitBounds(newBounds, { padding: 50 });
      }, 500);
    })
    map.fitBounds(<%= bbox || [] %>, {
      padding: 50
    });
    <% end %>

    <% if geojson.present? %>
    map.addSource('feature', {
      'type': 'geojson',
      'data': <%= raw(geojson.to_json) %>
    });
    <% end %>

    map.addLayer({
      'id': 'feature-fill',
      'type': 'fill',
      'source': 'feature',
      'layout': {},
      'paint': {
        'fill-color': '#AAA',
        'fill-opacity': 0.8
      }
    });
    map.addLayer({
      'id': 'feature-line',
      'type': 'line',
      'source': 'feature',
      'layout': {},
      'paint': {
        'line-color': '#000000',
        'line-opacity': 1,
        'line-width': 4
      }
    });
  });
</script>
